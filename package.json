{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:tailwind && pnpm run build:scss && remix build",
    "build:tailwind": "tailwindcss -m -i ./styles/app.scss -o app/styles/app.css",
    "build:scss": "sass ./styles/sass:./app/styles",
    "dev": "concurrently \"pnpm run dev:sass\" \"pnpm run dev:tailwind\" \"remix dev\"",
    "dev:tailwind": "tailwindcss -w -i ./styles/app.scss -o app/styles/app.css",
    "dev:sass": "sass --watch ./styles/sass:./app/styles",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@deck.gl/react": "^8.8.2",
    "@remix-run/node": "^1.6.3",
    "@remix-run/react": "^1.6.3",
    "@remix-run/serve": "^1.6.3",
    "axios": "^0.27.2",
    "deck.gl": "^8.8.2",
    "mapbox-gl": "^2.9.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.4.0",
    "react-map-gl": "^7.0.16",
    "recoil": "^0.7.4",
    "sass": "^1.53.0"
  },
  "devDependencies": {
    "@danmarshall/deckgl-typings": "^4.9.24",
    "@remix-run/dev": "^1.6.3",
    "@remix-run/eslint-config": "^1.6.3",
    "@types/mapbox-gl": "^2.7.3",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "eslint": "^8.15.0",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.4",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
